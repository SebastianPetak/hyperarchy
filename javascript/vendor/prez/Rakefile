desc "Package all scripts into prez.js"
task :package do
  require "sprockets"
  Dir.mkdir("pkg") unless File.exists?("pkg")
  secretary = Sprockets::Secretary.new(
    :root => File.dirname(__FILE__),
    :asset_root   => "pkg",
    :load_path    => ["lib/**/*", "vendor", "vendor/**/*"],
    :source_files => ["lib/prez.js"]
  )
  secretary.concatenation.save_to("pkg/prez.js")
end
